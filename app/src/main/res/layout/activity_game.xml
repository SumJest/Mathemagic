<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Поле для отображения текущего примера -->
    <TextView
        android:id="@+id/exampleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3 + 2 = ?"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Поле для отображения текущего счёта -->
    <TextView
        android:id="@+id/scoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: 0"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <!-- Поле для отображения количества жизней -->
    <TextView
        android:id="@+id/livesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lives: 3"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <!-- Поле для отображения оставшегося времени -->
    <TextView
        android:id="@+id/timerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time: 60"
        android:textSize="18sp"
        android:layout_marginBottom="16dp" />

    <!-- Поле ввода ответа -->
    <EditText
        android:id="@+id/answerEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите ответ"
        android:inputType="numberSigned|numberDecimal"
        android:layout_marginBottom="16dp" />

    <!-- Кнопка для подтверждения ответа -->
    <Button
        android:id="@+id/answerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ответить"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
