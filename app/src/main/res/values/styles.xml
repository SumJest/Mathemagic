<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/background</item>
    </style>
    <!-- Стиль для цифровых кнопок -->
    <style name="RoundedKeyButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:backgroundTint">@color/digit_button</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SpecialKeyButton">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/button_text</item>
    </style>

    <style name="ClearButton">
        <item name="android:backgroundTint">@color/clear_button</item>
        <item name="android:textColor">@color/button_text</item>
    </style>

    <style name="SubmitButton">
        <item name="android:backgroundTint">@color/submit_button</item>
        <item name="android:textColor">@color/button_text</item>
    </style>
</resources>